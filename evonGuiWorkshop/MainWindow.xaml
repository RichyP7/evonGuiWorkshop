<Window x:Class="evonGuiWorkshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evonGuiWorkshop"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800"
    DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid DataContext="{Binding Orders, Source={StaticResource Locator}}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Load Orders..." Command="{Binding LoadCommand}">
            
        </Button>
        <ListView Grid.Row="1"  ItemsSource="{Binding MyOrders ,Mode=OneWay}" HorizontalAlignment="Left" IsSynchronizedWithCurrentItem="True" Height="100" VerticalAlignment="Top" Width="Auto" MinWidth="200">

            <ListView.View>
                <GridView>

                    <GridViewColumn Width="120" DisplayMemberBinding="{Binding OrderNo}" />

                </GridView>
            </ListView.View>

        </ListView>



    </Grid>
</Window>
