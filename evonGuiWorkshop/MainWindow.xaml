<Window x:Class="evonGuiWorkshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evonGuiWorkshop"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="Auto" Width="Auto"
>
    <Window.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:evonGuiLib.ViewModel;assembly=evonGuiLib"></vm:ViewModelLocator>
        </ResourceDictionary>
    </Window.Resources>
    <Grid  DataContext="{Binding Orders, Source={StaticResource Locator}}" >
        <OrderView xmlns="clr-namespace:evonGuiLib.View;assembly=evonGuiLib">

        </OrderView>
    </Grid>

</Window>
